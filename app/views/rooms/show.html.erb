
<h1>DM</h1>

<h4>参加者</h4>
<% @entries.each do |e| %>
  <div class="user-name">
    <strong>
        <a class="rooms-user-link" href="/users/<%= e.user.id %>">
          <%= e.user.name %>さん
        </a>
    </strong>
  </div>
<% end %>

<hr>

<% if @messages.present? %>
  <% @messages.each do |m| %>
    <strong><%= m.centent %></strong>
    <hr>
  <% end %>
<% else %>
  <h3 class="text-center">メッセージはまだありません</h3>
<% end %>

<%= form_for @message do |f| %>
  <%= f.text_field :centent, :placeholder => "メッセージを入力して下さい" , :size => 70 %>
  <%= f.hidden_field :room_id, :value => @room.id %>
  <br>
  <%= f.submit "投稿する" %>
<% end %>